    },
    {
      "name": "Certificates",
      "item": [
        {
          "name": "Upload Certificate",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "certificate",
                  "type": "file",
                  "src": "/path/to/certificate.jpg"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/achievements/{{achievement_id}}/participants/{{participant_id}}/results/{{result_id}}/certificate",
              "host": ["{{base_url}}"],
              "path": ["achievements", "{{achievement_id}}", "participants", "{{participant_id}}", "results", "{{result_id}}", "certificate"]
            }
          }
        },
        {
          "name": "Delete Certificate",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
