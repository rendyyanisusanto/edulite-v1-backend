                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/document.jpg"
                },
                {
                  "key": "caption",
                  "value": "Foto penyerahan piala",
                  "type": "text"
                },
                {
                  "key": "file_type",
                  "value": "image",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/achievements/{{achievement_id}}/documents",
              "host": ["{{base_url}}"],
